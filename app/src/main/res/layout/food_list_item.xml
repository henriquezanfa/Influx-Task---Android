<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
  
  <data>
    <variable
       name="viewModel"
       type="com.influx.fbapp.viewmodel.HomeViewModel" />
  </data>
  
  <androidx.constraintlayout.widget.ConstraintLayout
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_marginBottom="16dp"
     android:background="@drawable/layout_border"
     android:paddingBottom="16dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  
  <FrameLayout
     android:id="@+id/cardView"
     android:layout_width="match_parent"
     android:layout_height="230dp"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent">
    
    <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/poster_img"
       android:scaleType="fitXY"
       android:contentDescription="@string/poster_image"/>
  
    <ImageView
       android:src="@drawable/layout_border"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:contentDescription="@string/layout_border_image_view"/>
  
  </FrameLayout>
  
  <com.google.android.material.button.MaterialButton
     android:text="@string/normal_button"
     style="@style/Widget.MaterialComponents.Button.OutlinedButton"
     app:strokeColor="@color/button_stroke"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/button7"
     android:textColor="@color/button_text_color"
     android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView"
     app:layout_constraintEnd_toEndOf="@+id/cardView" android:layout_marginStart="8dp"
     app:layout_constraintStart_toStartOf="@+id/cardView"
  />
  
  <com.google.android.material.button.MaterialButton
     android:text="@string/regular_button"
     app:strokeColor="@color/button_stroke"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     style="@style/Widget.MaterialComponents.Button.OutlinedButton"
     android:id="@+id/button8"
     android:textColor="@color/button_text_color"
     app:layout_constraintTop_toTopOf="@+id/button7"
     app:layout_constraintBottom_toBottomOf="@+id/button7"
     app:layout_constraintEnd_toStartOf="@+id/button7"
     android:layout_marginEnd="8dp"
     app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
  
  <com.google.android.material.button.MaterialButton
     android:text="@string/large_button"
     android:layout_width="wrap_content"
     app:strokeColor="@color/button_stroke"
     android:textColor="@color/button_text_color"
     android:layout_height="wrap_content" android:id="@+id/button9"
     style="@style/Widget.MaterialComponents.Button.OutlinedButton"
     app:layout_constraintTop_toTopOf="@+id/button7"
     app:layout_constraintStart_toEndOf="@+id/button7"
     android:layout_marginStart="8dp"
     android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
  
  <TextView
     android:text="@string/productTitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" android:id="@+id/product_title"
     android:textSize="@dimen/product_title_text_size"
     android:textColor="@color/button_text_color"
     app:layout_constraintTop_toBottomOf="@+id/button7"
     android:layout_marginTop="@dimen/text_view_margin_top"
     app:layout_constraintStart_toStartOf="@+id/button8"/>
  
  <TextView
     android:text="@string/itemPrice"
     android:textSize="@dimen/item_text_size"
     android:textColor="@color/white"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" android:id="@+id/itemPrice"
     app:layout_constraintStart_toStartOf="@+id/product_title"
     android:layout_marginTop="@dimen/text_view_margin_top" app:layout_constraintTop_toBottomOf="@+id/product_title"/>
  
  <TextView
     android:text="@string/plus_button"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="@color/white"
     android:textSize="@dimen/quantity_buttons_text_size"
     android:clickable="true"
     android:id="@+id/plus_button" app:layout_constraintEnd_toEndOf="@+id/button9"
     app:layout_constraintBottom_toBottomOf="@+id/itemPrice" android:focusable="true"/>
  <TextView
     android:text="@string/quantity_initial_text"
     android:inputType="numberDecimal"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="@color/white"
     android:textSize="@dimen/quantity_text_size"
     android:id="@+id/quantity_button" app:layout_constraintEnd_toStartOf="@+id/plus_button"
     android:layout_marginEnd="16dp"
     app:layout_constraintBottom_toBottomOf="@+id/plus_button" app:layout_constraintTop_toTopOf="@+id/plus_button"
     tools:ignore="TextViewEdits"/>
  <TextView
     android:text="@string/minus_button"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="@color/white"
     android:textSize="@dimen/quantity_buttons_text_size"
     android:id="@+id/minus_button" app:layout_constraintEnd_toStartOf="@+id/quantity_button"
     android:layout_marginEnd="16dp"
     app:layout_constraintTop_toTopOf="@+id/plus_button"
     app:layout_constraintBottom_toBottomOf="@+id/plus_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>