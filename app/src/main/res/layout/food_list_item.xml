<?xml version="1.0" encoding="utf-8"?>
<layout>
  
  <data>
    <variable
       name="viewModel"
       type="com.influx.fbapp.viewmodel.HomeViewModel" />
  </data>

<androidx.constraintlayout.widget.ConstraintLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools" android:layout_marginBottom="16dp"
   android:background="@drawable/layout_border"
   android:paddingBottom="16dp"
   android:layout_width="match_parent"
   android:layout_height="wrap_content">
  
  <FrameLayout
     android:id="@+id/cardView"
     android:layout_width="match_parent"
     android:layout_height="230dp"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent">
    
    <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/poster_img"
       android:scaleType="fitXY"
       android:contentDescription="@string/poster_image"/>
  
    <ImageView
       android:src="@drawable/layout_border"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
  
  </FrameLayout>
  
  <com.google.android.material.button.MaterialButton
     android:text="@string/normal_button"
     style="@style/Widget.MaterialComponents.Button.OutlinedButton"
     app:strokeColor="@color/button_stroke"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/button7"
     android:textColor="@color/button_text_color"
     android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView"
     app:layout_constraintEnd_toEndOf="@+id/cardView" android:layout_marginStart="8dp"
     app:layout_constraintStart_toStartOf="@+id/cardView"
  />
  
  <com.google.android.material.button.MaterialButton
     android:text="@string/regular_button"
     app:strokeColor="@color/button_stroke"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     style="@style/Widget.MaterialComponents.Button.OutlinedButton"
     android:id="@+id/button8"
     android:textColor="@color/button_text_color"
     app:layout_constraintTop_toTopOf="@+id/button7"
     app:layout_constraintBottom_toBottomOf="@+id/button7"
     app:layout_constraintEnd_toStartOf="@+id/button7"
     android:layout_marginEnd="8dp"
     app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
  
  <com.google.android.material.button.MaterialButton
     android:text="@string/large_button"
     android:layout_width="wrap_content"
     app:strokeColor="@color/button_stroke"
     android:textColor="@color/button_text_color"
     android:layout_height="wrap_content" android:id="@+id/button9"
     style="@style/Widget.MaterialComponents.Button.OutlinedButton"
     app:layout_constraintTop_toTopOf="@+id/button7"
     app:layout_constraintStart_toEndOf="@+id/button7"
     android:layout_marginStart="8dp"
     android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
  
  <TextView
     android:text="TextView"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" android:id="@+id/product_title"
     android:textSize="18sp"
     android:textColor="@color/button_text_color"
     app:layout_constraintTop_toBottomOf="@+id/button7"
     android:layout_marginTop="8dp"
     app:layout_constraintStart_toStartOf="@+id/button8"/>
  
  <TextView
     android:text="TextView"
     android:textSize="20sp"
     android:textColor="@color/white"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" android:id="@+id/itemPrice"
     app:layout_constraintStart_toStartOf="@+id/product_title"
     android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/product_title"/>
  
  <TextView
     android:text="+"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="@color/white"
     android:textSize="32sp"
     android:clickable="true"
     android:id="@+id/plus_button" app:layout_constraintEnd_toEndOf="@+id/button9"
     app:layout_constraintBottom_toBottomOf="@+id/itemPrice"/>
  <TextView
     android:text="0"
     android:inputType="numberDecimal"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="@color/white"
     android:textSize="24sp"
     android:id="@+id/quantity_button" app:layout_constraintEnd_toStartOf="@+id/plus_button"
     android:layout_marginEnd="16dp"
     app:layout_constraintBottom_toBottomOf="@+id/plus_button" app:layout_constraintTop_toTopOf="@+id/plus_button"/>
  <TextView
     android:text="-"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="@color/white"
     android:textSize="32sp"
     android:id="@+id/minus_button" app:layout_constraintEnd_toStartOf="@+id/quantity_button"
     android:layout_marginEnd="16dp"
     app:layout_constraintTop_toTopOf="@+id/plus_button"
     app:layout_constraintBottom_toBottomOf="@+id/plus_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>